<?xml version="1.0" encoding="UTF-8"?>
<base:AboutItemListPageXaml
xmlns="http://xamarin.com/schemas/2014/forms"
xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
x:Class="EvvMobile.Pages.About.AboutItemListPage"
xmlns:statics="clr-namespace:EvvMobile.Statics"
xmlns:base="clr-namespace:EvvMobile.Pages.About"
xmlns:views="clr-namespace:EvvMobile.Views">
  <ScrollView>
    <StackLayout Spacing="0" BackgroundColor="White">

      <Image x:Name="AboutBackGroundImage"
			Aspect="AspectFit" />
      <ContentView Padding="20">
        <Label
				LineBreakMode="WordWrap"
				Text="{Binding Overview}" />
      </ContentView> 
      
      <ContentView Padding="20">
        <Label
				LineBreakMode="WordWrap"
				Text="{Binding ListHeading}" />
      </ContentView>
      <ListView
			x:Name="AboutItemList"
			ItemsSource="{Binding Items}"
			ItemTapped="AboutItemTapped"
			RowHeight="{x:Static statics:RowSizes.MediumRowHeightInt}">
        <ListView.ItemTemplate>
          <DataTemplate>
            <ViewCell
						StyleId="disclosure">
              <ContentView Padding="20,0,0,0">
                <Label
								Text="{Binding Title}"
                TextColor ="#0050ff"
								VerticalTextAlignment="Center"
								LineBreakMode="TailTruncation" />
              </ContentView>
            </ViewCell>
          </DataTemplate>
        </ListView.ItemTemplate>
      </ListView>
    </StackLayout>
  </ScrollView>
</base:AboutItemListPageXaml>