<?xml version="1.0" encoding="utf-8" ?>
<base:NewScheduleListPageXaml xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="EvvMobile.Pages.Schedules.NewScheduleListPage"
             xmlns:base="clr-namespace:EvvMobile.Pages.Schedules;assembly=EvvMobile"
                           xmlns:systems="clr-namespace:EvvMobile.Views.Systems;assembly=EvvMobile"
             xmlns:schedulesView="clr-namespace:EvvMobile.Views.Schedules;assembly=EvvMobile"
             xmlns:statics="clr-namespace:EvvMobile.Statics;assembly=EvvMobile"
                              >

  <StackLayout  VerticalOptions="FillAndExpand"  >
      <schedulesView:NewScheduleGroupListView
          ItemsSource="{Binding NewShiftsGroups}"
          HasUnevenRows="true"
          IsGroupingEnabled="True"
          ItemSelected="OnListItemSelected"
          RefreshCommand="{Binding LoadNewSheduleShiftsCommand}"
          IsRefreshing="{Binding IsBusy, Mode=OneWay}"
          IsPullToRefreshEnabled="true" 
      />
  </StackLayout>

</base:NewScheduleListPageXaml>